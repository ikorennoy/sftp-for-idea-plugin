<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.github.ikorennoy.remote-file-viewer</id>

    <name>Remote File Viewer</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="korennoy.ilya@gmail.com">Ilya Korennoy</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.RemoteFileViewer</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.ikorennoy.remote.ui.RemoteFileAccessWindowsFactory" id="Remote Files"
                    anchor="right" doNotActivateOnStart="true"/>
        <virtualFileSystem implementationClass="com.github.ikorennoy.remote.edit.TempVirtualFileSystem"
                           key="remoteFileViewerLocalFs" physical="false"/>

        <!--        <editorNotificationProvider-->
        <!--                implementation="com.github.ikorennoy.remote.edit.ProjectionFileEditorPanelProvider"/>-->

        <applicationConfigurable
                parentId="tools"
                instance="com.github.ikorennoy.remote.settings.ui.RemoteFileAccessConfigurable"
                id="com.github.ikorennoy.remote.settings.ui.RemoteFileAccessConfigurable"
                displayName="SSH Configuration"
        />

        <editorNotificationProvider
                implementation="com.github.ikorennoy.remote.edit.RemoteEditEditorPanelProvider"/>
        <notificationGroup
                displayType="BALLOON"
                id="Remote Operations Notifications"/>
    </extensions>


    <actions>
        <group id="RemoteFileSystemPopup">
            <action id="RemoteFileSystem.ShowCreate"
                    class="com.github.ikorennoy.remote.actions.ShowCreateAction"
                    use-shortcut-of="NewFile"/>
        </group>
        <action id="RemoteFileSystem.NewFileAction"
                class="com.github.ikorennoy.remote.actions.NewFileAction"/>
        <action id="RemoteFileSystem.NewDirectoryAction"
                class="com.github.ikorennoy.remote.actions.NewDirectoryAction"/>
        <action id="RemoteFileSystem.Delete"
                class="com.github.ikorennoy.remote.actions.DeleteAction"
                use-shortcut-of="$Delete"/>
        <action id="RemoteFileSystem.ShowSshConfiguration"
                class="com.github.ikorennoy.remote.actions.ShowSettingsAction"/>
        <action id="RemoteFileSystem.UpdateTree"
                class="com.github.ikorennoy.remote.actions.UpdateTreeAction"
                use-shortcut-of="Refresh"/>
        <action id="RemoteFileSystem.Disconnect"
                class="com.github.ikorennoy.remote.actions.DisconnectAction"/>
        <action id="RemoteFileSystem.SelectOpenedFile"
                class="com.github.ikorennoy.remote.actions.SelectOpenedFileAction"/>
    </actions>
</idea-plugin>