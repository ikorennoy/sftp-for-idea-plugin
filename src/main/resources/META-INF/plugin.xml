<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.github.ikorennoy.remote-file-viewer</id>

    <name>Remote File Viewer</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="korennoy.ilya@gmail.com">Ilya Korennoy</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.RemoteFileViewer</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.ikorennoy.remotefileviewer.ui.FileViewerWindowsFactory" id="Remote Files"
                    anchor="right" doNotActivateOnStart="true"/>
        <virtualFileSystem implementationClass="com.github.ikorennoy.remotefileviewer.filesystem.RemoteFileSystem"
                           key="remoteFileSysSftp" physical="true"/>
        <virtualFileSystem implementationClass="com.github.ikorennoy.remotefileviewer.remoteEdit.LocalFileSystem"
                           key="remoteFileViewerLocalFs" physical="false"/>

        <!--        <editorNotificationProvider-->
        <!--                implementation="com.github.ikorennoy.remotefileviewer.remoteEdit.ProjectionFileEditorPanelProvider"/>-->

        <applicationConfigurable
                parentId="tools"
                instance="com.github.ikorennoy.remotefileviewer.settings.ui.RemoteFilePluginConfigurable"
                id="com.github.ikorennoy.remotefileviewer.settings.ui.RemoteFilePluginConfigurable"
                displayName="SSH Configuration"
        />

        <editorNotificationProvider
                implementation="com.github.ikorennoy.remotefileviewer.remoteEdit.ProjectionFileEditorPanelProvider"/>
    </extensions>


    <actions>
        <group id="RemoteFileSystemPopup">
            <action id="RemoteFileSystem.ShowCreate"
                    class="com.github.ikorennoy.remotefileviewer.actions.ShowCreateAction"
                    use-shortcut-of="NewDir"
            />
        </group>
        <action id="RemoteFileSystem.NewFileAction"
                class="com.github.ikorennoy.remotefileviewer.actions.NewFileAction"/>
        <action id="RemoteFileSystem.UploadCurrentFileProjection"
                class="com.github.ikorennoy.remotefileviewer.actions.UploadCurrentFileProjection"
                use-shortcut-of="SaveAll"/>
        <action id="RemoteFileSystem.ShowSshConfiguration"
                class="com.github.ikorennoy.remotefileviewer.actions.ShowSettingsAction"/>
    </actions>
</idea-plugin>